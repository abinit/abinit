# === Other options
prtden 0  prteig 0  prtwf 0
optforces 1
pawprtvol 3

 pp_dirpath "$ABI_PSPDIR"
 pseudos "28ni.paw, 8o.2.paw"

paral_kgb 1
npband 2
wfoptalg  114
# Dataset #6 doesn't converge with LOBPCG (CPU or GPU)
wfoptalg6  111 nstep6 40
gpu_option 2
