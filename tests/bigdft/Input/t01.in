# Test a dihydrogen molecule with BigDFT
# Almost all values are default.

 nstep 20

 acell 3*7
 ecut 10
 kptopt 0
 kpt   0 0 0
 istwfk 1
 natom  2
 nband 1
 nkpt  1
 nsym  1
 ntypat  1
 rprim   1 0 0  0 1 0  0 0 1
 symrel  1 0 0  0 1 0  0 0 1
 toldfe 1.0d-6
 typat  1 1
 xcart  3.0 3.5 3.5
        4.0 3.5 3.5
 znucl 1 1

 usewvl 1
 optforces 0
 optstress 0
 wvl_hgrid 0.5
 icoulomb 1
 nscforder 14
 wvl_nprccg 5
 wvl_bigdft_comp 1 #to follow the BigDFT workflow

# Avoid print densities, wavefunctions and eigenvalues
 prteig 0
 prtden 0
 prtwf  0

