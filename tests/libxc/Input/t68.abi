# CH system, PBE0 and HSE06, interatomic distance optimization

 ndtset    3  

#DATASET 1  PBE (the pseudopotentials for C and H are with PBE XC)

#DATASET 2 PBE0
 ixc2    41
 getwfk2   1
 getxred2  1

#DATASET 3 HSE06
 ixc3    -428
 getwfk3   2
 getxred3  2

#Common
 acell 5  2*4 Angstrom
 diemac 1.0d0   diemix 0.5d0
 ecut 13  
 ionmov 2
 ntime 15 
 tolrff 0.02
 tolmxf 5.0d-5

 kptopt 1
 ngkpt 1 1 1
 shiftk 3*0.0
 istwfk 1
 natom  2
 nsppol 2
 spinmagntarget 1
 nband 4
 nbdbuf 0

 nstep 25  
 ntypat  2
 typat  1 2
 xcart -0.562   0 0  0.562  0 0 Angstrom   
 znucl  6 1

 pp_dirpath "$ABI_PSPDIR"
 pseudos "C.psp8, H.psp8"

