# test ZORA terms with nuclear dipole moment
# AlP solid
#


# unconverged, use at least 20 for convergence
ecut 5
pawecutdg 10

#nuclear magnetic dipole moment on Al site
#size 1 in a.u. along x axis
natnd 1 # one atom in the unit cell has a dipole
iatnd 2 # it is atom number 2 (the Al atom in this case)
atndlist  # the value of the dipole
1.0 0.0 0.0

# Lamb shielding on Al site
lambsig 0.0D0 766.76D-6

ndtset 8
udtset 4 2

zora1? 0 # no ZORA, normal non-rel calc
nband1? 4

zora2? 1 # ZORA kinetic energy terms on nuc dip only
nband2? 4

zora3? 2 # ZORA spin terms (SOC and spin-dipole)
nband3? 8
nspinor3? 2

zora4? 3 # ZORA kinetic + spin terms
nband4? 8
nspinor4? 2

tolvrs?1 1.0D-18
write_files?1 "wf_1"

tolwfr?2 1.0D-20
getwfk?2 -1
rfddk?2 1
rfdir?2 1 1 1
iscf?2 -3
orbmag?2 2
write_files?2 "None"

istwfk *1

kptopt 3
nsym 1
symrel 1 0 0 0 1 0 0 0 1
symmorphi 0

# severely unconverged, use 8 8 8 at least
# for convergence
ngkpt 3*2
nshiftk 4
shiftk 3*1/2
1/2 0 0
0 1/2 0
0 0 1/2

nstep 30

prtwf 0
prteig 0
prtden 0

optforces 0
optstress 0
pawcpxocc 2
usexcnhat 0

paral_atom 0
paral_kgb 0

acell    3*10.3008969711

rprim    0.000000000000000   0.500000000000000   0.500000000000000
         0.500000000000000   0.000000000000000   0.500000000000000
         0.500000000000000   0.500000000000000   0.000000000000000

natom    2
ntypat   2
typat    1 2
znucl    15 13
xred     0.250000000000000   0.250000000000000   0.250000000000000
         0.000000000000000   0.000000000000000   0.000000000000000

pp_dirpath="$ABI_PSPDIR/Psdj_paw_pbe_std/"
pseudos="P.xml, Al.xml"

