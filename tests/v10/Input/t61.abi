# Test calculation and printing of the electron-phonon contribution to the total energy
# Diamond test
 ndtset 9 udtset 3 3
 iqpt:? 1

 prepalw 2

 ngkpt 2 2 2
 nshiftk 1
 shiftk 0.0 0.0 0.0

 ngqpt 2 2 2
 qptopt 1
 nshiftq 1
 shiftq 0.0 0.0 0.0

# Ground state density
 iqpt+?    1
 tolvrs?1  1.0d-6     # Underconverged : tolvrs 1.0d-18 should be used for converged results

# Non self-consistent calculation with an arbitrary q point (here Gamma)
 getden?2 -1
 iscf?2   -2
 nqpt?2    1
 tolwfr?2  1.0d-6   # Underconverged : tolwfr 1.0d-22 should be used for converged results
 kptopt?2  3

# Computation at Gamma
 getwfk?3 -2
 getwfq?3 -1
 nqpt?3    1
 rfphon?3  1        # Do phonon response
 tolwfr?3  1.0d-6   # Underconverged : tolwfr 1.0d-22 should be used for converged results
 kptopt?3  3
 prtwf?3  -1        # Do not print WF
 prtpot    1        # Print potential

# Cell dependent parameters
 acell 3*6.751
 rprim 0 .5 .5 .5 0 .5 .5 .5 0
 nstep 200
 natom 2
 typat 1 1
 xred 3*0.0 3*0.25
 nband 4
 ntypat 1
 znucl 6
 diemac 4
 ecut 20
 enunit 2
 istwfk *1

 pp_dirpath "$ABI_PSPDIR"
 pseudos "PseudosTM_pwteter/6c.pspnc"

