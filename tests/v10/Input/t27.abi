# Crystalline fcc Fe : GBT
#

# GBT 
use_gbt 1
qgbt 0.0 0.0 0.5

#Common input variables
 natom 1
 ntypat 1
 typat 1
 znucl 26
 xred    0.0000000000    0.0000000000    0.0000000000
 acell    1.0    1.0    1.0
 rprim
    4.2302629971    0.0000000000    2.4423434801
    1.4100876657    3.9883302019    2.4423434801
    0.0000000000    0.0000000000    4.8846869602

# SPIN
 nspinor  2
 nsppol   1
 nspden   4
 so_psp   0
 spinat   0.0 0.0 4.0

 occopt   7
# symmetry setting 
 nsym 1

#Definition of the planewave basis set
ecut  10        # Maximal kinetic energy cut-off, in Hartree

#Definition of the k-point grids
kptopt 3
nshiftk 1
shiftk  0 0 0  # These shifts will be the same for all grids
ngkpt 2 2 2

#Definition of the SCF procedure
 nstep 8         # Maximal number of SCF cycles
 tolvrs 1.0d-8
 nband  16

 pp_dirpath "$ABI_PSPDIR/Psdj_nc_fr_04_pbe_std_psp8"                # This is the path to the directory were
                               # pseudopotentials for tests are stored
 pseudos "Fe.psp8"
                               # Name and location of the pseudopotential


