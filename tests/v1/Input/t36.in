#   Si in Box : comparison with the result of Corning code (LLN version).

 acell 3*6
 diemac 1.0d0
 diemix 1.0d0
 ecut 15
 enunit 2
 intxc 1
 kptopt 0

 kpt   3*0.0   kptnrm 1
 natom  1 nband 4
 nkpt  1
 nline 3  nstep 2
 nsym  1 ntypat  1
 occopt 0 occ 1*2.0d0 3*1.33333333333333d0
 prtvol 10
 rprim  1 0 0 0 1 0 0 0 1
 symrel
       1  0  0    0  1  0    0  0  1
 tnons  3*0d0
 tolwfr 1.0d-16
 typat  1
 wtk   1
 xred  0.0 0.0 0.0
 znucl 8


 pp_dirpath "$ABI_PSPDIR"
 pseudos "8o.pspnc"

