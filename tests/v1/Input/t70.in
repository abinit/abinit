# Magnesium atom. acell much too small.
# Excited states computation

 ndtset 2   getden -1   getwfk -1

 nband1   1
 prtden1  1

 iscf2   -1
 nband2  10

 kptopt 0

 nkpt  1    kptnrm  4
     kpt  0 0 0
     wtk  1

 acell 17.999   18   18.001
 boxcenter 3*0
 diemac 1.0d0   diemix 0.5d0
 ecut  3.5

 ixc 7

 natom  1

 nstep 20
 nsym 8  ntypat  1
 occopt 1
 rprim 1 0 0  0 1 0  0 0 1
 symrel  1  0  0   0  1  0   0  0  1
        -1  0  0   0  1  0   0  0  1
         1  0  0   0 -1  0   0  0  1
        -1  0  0   0 -1  0   0  0  1
         1  0  0   0  1  0   0  0 -1
        -1  0  0   0  1  0   0  0 -1
         1  0  0   0 -1  0   0  0 -1
        -1  0  0   0 -1  0   0  0 -1
 tnons 24*0
 tolwfr 1.0d-16
 typat  1
 xcart  0 0 0 Angstrom
 znucl  12.0

 pp_dirpath "$ABI_PSPDIR"
 pseudos "12mg.pspnc"

