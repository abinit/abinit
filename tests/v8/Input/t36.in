# C in diamond structure.
 ndtset 4

 istwfk *1
 ecut 10
 ecutsm 0.5
 #nband 50
 nband 4
 tolvrs 1.0e-10
 diemac 6.0d0

# Kpoints
 ngkpt    2 2 2
 nshiftk  1
 shiftk   0.0 0.0 0.0

########################################
# Dataset 1 (GS run to get WFK0 and DEN)
########################################
 tolwfr1   1e-20
 # Cancel default values
 getwfk1   0
 nqpt1     0
 rfphon1   0
 kptopt1   1

##################################################
# Dataset 2 (NSCF run to get WFK with empty states
##################################################
 getden_path2  "t36o_DS1_DEN"
 getwfk2  0
 iscf2   -2
 nband2   24
 nbdbuf2  4
 tolwfr2  1e-16
 # Cancel default values
 nqpt2     0
 rfphon2   0
 kptopt2   1
 
##############################
# DFPT runs on a single q-point
#############################
 getwfk     2
 nqpt       1
 rfphon     1 
 rfatpol    1 1 
 rfdir      1 0 0
 kptopt     3

 qpt 5.00000000E-01  0.00000000E+00  0.00000000E+00


##################################################
# Dataset 3 NSCF calculation and printing of 1WF
##################################################
 iscf4          -2
 tolwfr4        1e-16
 get1den4       3
 nband4         24
 nbdbuf4        4
 prtfull1wf4    1


# Structure 
 acell 3*6.70346805
 rprim 0 .5 .5 .5 0 .5 .5 .5 0
 natom 2
 typat 1 1
 xred 3*0.0 3*0.25
 ntypat  1
 znucl 6

