#### MnO AFM non-collinear spins along [111]

nsym  1

ecut  5

ixc   7

##### K-POINTS
kptopt  3
ngkpt   3*2
shiftk  0.5 0.5 0.5
chksymbreak 0

# mixing
diemix    0.8
diemixmag 0.8
diemac 20

# crystal def.
natom  4 
ntypat 2 
typat  1 1 2 2
znucl  25 8

chkprim 0
acell 3*4.50 Angstrom
rprim 0.0 1/2 1/2
      1/2 0.0 1/2
      1.0 1.0 0.0
xred 
0 0 0
0.0 0.0 0.5
0.5 0.5 0.25
0.5 0.5 0.75

# Magnetism
so_psp  1 1
nsppol  1
nspden  4
nspinor 2
prtdensph 1
spinmagntarget 0
spinat
 5  5  5
-5 -5 -5
6*0

# dataset 1: GS
iscf     7
tolwfr   1.0E-16
nstep    30
nline    8

# printing options
prtden  0
prteig  0

 pp_dirpath "$ABI_PSPDIR"
 pseudos "Mn-sp-r_LDA_1012_dojov0.4.psp8, O-r_LDA_1012_dojov0.4.psp8"

