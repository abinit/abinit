# Oxygen molecule, treated with fixed occupation numbers with LDA.

 nimage 2
 imgwfstor 1

 ntimimage 2

#Structure
 ntypat  1
 znucl  8.0
 natom  2
 typat  1 1
 acell  5.000  9.000  10.000
 xred  0.0 0.0  0.1260   0.0 0.0 -0.1260

#K-points
 kptopt 0
 nkpt 1
 kpt   3*0.0

#Electronic structure
 nsppol 2
 nband 8 8
 occopt 0
 occ 7*1 1*0 5*1 3*0
 occ_2img 5*1 0.7765 0.2235  0.0 5*1 0.7765 0.2235  0.0

#Optimization of structure
 ionmov 2
 ntime 10
 tolmxf 1.0d-5

#Other
 diemac 2.0d0
 ecut 13.00
 getwfk -1
 nstep 30
 tolvrs 1.0d-16


 pp_dirpath "$ABI_PSPDIR"
 pseudos "PseudosTM_pwteter/8o.pspnc"

