#### This is a GGA calculation for NiO.

ndtset 3

wfoptalg 114
bandpp     8

prtvol     5

tolvrs        1e-10

tolwfr_diago2 1e-18

tolvrs3       1e-10
tolwfr3       1e-15
tolwfr_diago3 1e-18

nstep  100


nline 4

##### CONVERGENCE PARAMETERS
ecut 4
pawecutdg 8
nband  16
occopt 7 tsmear 5.0d-3


##### PHYSICAL PARAMETERS
natom 2 ntypat 2 typat 1 2
znucl  28.0 8.0
xred 0 0 0
    0.5 0.5 0.5
acell   3*7.92
rprim 0.0 1/2 1/2
      1/2 0.0 1/2
      1/2 1/2 0.0

##### K-POINTS
kptrlatt 1 0 0 0 1 0 0 0 1
chksymbreak 0

pp_dirpath "$ABI_PSPDIR"
pseudos "28ni.paw, 8o.2.paw"

