# Al at high temperature using the Extended FPMD model
ndtset 4

useextfpmd1 1
nband1 50

useextfpmd2 2
nband2 50

useextfpmd3 3
nband3 50

useextfpmd4 1
extfpmd_nbdbuf4 10
nband4 60

extfpmd_nbcut 10

dipdip 0
occopt 3
tsmear 10

acell 3*4.04890262869491 angstrom
rprim  0.0  0.5  0.5
       0.5  0.0  0.5
       0.5  0.5  0.0
ntypat 1
znucl 13
natom 1
typat 1
xred
   0.0  0.0  0.0

ecut 10.0
pawecutdg 10.0
chksymbreak 0
ngkpt 2 2 2
nstep 150
toldfe 1.0d-6
tolsym 1.0d-8

# Pseudopotential file
pp_dirpath = "$ABI_PSPDIR"
pseudos = "Al.LDA-PW-paw.xml"

