# Fe LDA+U
# Tests various usepawu (>0 and <0)

#OPTIONS AND DATASETS
prtvol 3
pawprtvol -3
nline 12
tolvrs 1.0d-15
chksymbreak 0

ndtset 6

nstep1   28
nstep2   29
nstep3   27
nstep4   44
nstep5   31
nstep6   29

usepawu1  4 
usepawu2  4 
usepawu3  4 

usepawu4  1 
usepawu5  1 
usepawu6  1 

pawxcdev1 0
pawxcdev2 1
pawxcdev3 2
pawxcdev4 0
pawxcdev5 1
pawxcdev6 2

# SPIN 
nsppol  1
nspinor 2
nspden  4
spinat 1.0 1.0 1.0

# CONVERGENCE PARAM
ecut 14
pawecutdg  30
nband  24
occopt 7
tsmear 1600 K

# PHYSICAL DATA
natom 1 ntypat  1 typat  1  
znucl  26.0 
xred  0.d0   0.d0   0.d0

#Definition of the unit cell
acell   3*5.42
rprim     -0.5  0.5  0.5
           0.5 -0.5  0.5
           0.5  0.5 -0.5

# POINTSK 
kptopt 3  
ngkpt 1 1 1
nshiftk 1
shiftk 0.0 0.0 0.0

# DFT+U
dmatpuopt 2
lpawu   2
upawu  6.0000 eV
jpawu  1.0000 eV

 pp_dirpath "$ABI_PSPDIR"
 pseudos "26fe.lda2.paw"
 #pseudos "Pseudodojo_paw_pbe_standard/Fe.xml"

