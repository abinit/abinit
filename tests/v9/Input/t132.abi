
ndtset    3

!Unit cell
 natom  2
 ntypat 2
 typat  1 2 
 znucl  5 7
 acell    4.734737864632  4.734737864632   25.00000 
 angdeg   90.00  90.00 120.0
 xred:
  0.3333333333  0.6666666667  0.0000000000 
  0.6666666667  0.3333333333  0.0000000000
 xred+      
  0.0000000000  0.0000000000  0.0001000000
  0.0000000000  0.0000000000  0.0000000000

!avoid errors and speed-up conv 
 chksymbreak 0 
 chksymtnons 0

!k-point grid
 kptopt       1
 ngkpt        6  6   1
 nshiftk      1
 shiftk       0 0 0

!Convergence parameters
 ecut   48.0
 tolwfr 1.d-16
 nstep  50

!XC used
 ixc         11

!bands
 nband     8
 nbdbuf    2
 
! 2D Beigi CUT-OFF
  icutcoul     2
  vcutgeo      1 1 0

 pp_dirpath "$ABI_PSPDIR/Pseudodojo_nc_sr_04_pw_standard_psp8"
 pseudos    "B.psp8, N.psp8"

