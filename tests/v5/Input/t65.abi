# beta-SiC
#

ndtset      6
symsigma    0

# memory management
gwmem2     00
gwmem3     10
gwmem4     01
gwmem5     00
gwmem6     00

# DATASET 1 : density + WFK
nband1     20

# DATASET 2 : SCR
optdriver2  3
awtr2       1
nband2     20
ecuteps2    5.
ecutwfn2    8.
inclvkb2    2
getwfk2    -1
gwcomp2     0

# DATASET 3 : SIG
optdriver3  4
nband3     20
ecutsigx3   8.
ecutwfn3    8.
getwfk3    -2
getscr3    -1
gwcomp3     0
nkptgw3     2
kptgw3      0. 0. 0.     0.5 0.5 0.
bdgw3       4 4          5 5
gw_icutcoul3  3           # old deprecated value of icutcoul, only used for legacy

# DATASET 4 : SIG
optdriver4  4
nband4     20
ecutsigx4   8.
ecutwfn4    8.
getwfk4    -3
getscr4    -2
gwcomp4     1                # Switching on the closure trick
gwencomp4   1.2
nkptgw4     2
kptgw4      0. 0. 0.     0.5 0.5 0.
bdgw4       4 4          5 5
gw_icutcoul4  3           # old deprecated value of icutcoul, only used for legacy

# DATASET 5 : SCR
optdriver5  3
awtr5       1
nband5     20
ecuteps5    5.
ecutwfn5    8.
inclvkb5    2
getwfk5    -4
gwcomp5     1                # Switching on the closure trick
gwencomp5   1.2

# DATASET 6 : SIG
optdriver6  4
nband6     20
ecutsigx6   8.
ecutwfn6    8.
getwfk6    -5
getscr6    -1
gwcomp6     1                # Switching on the closure trick
gwencomp6   1.2
nkptgw6     2
kptgw6      0. 0. 0.     0.5 0.5 0.
bdgw6       4 4          5 5
gw_icutcoul6  3           # old deprecated value of icutcoul, only used for legacy



#### Common to all datasets ####
#
# printing options
prtden  0
#prtwf   0
prtvol  1
enunit  1

# atomic types
natom    2
ntypat   2
znucl    14  6
typat    1   2

# k-points parameters
ngkpt    4 4 4
shiftk   0. 0. 0.
istwfk   8*1

# cut-off
ecut    12.

# SCF parameters
#toldfe  1.d-7
tolwfr  1.d-9
nstep   50

#geometry
acell  3*8.155
rprim  0.  0.5 0.5
       0.5 0.  0.5
       0.5 0.5 0.

# atomic positions
xred
   0.0000   0.0000  0.0000
   0.2500   0.2500  0.2500

# XC potential
ixc     7


 pp_dirpath "$ABI_PSPDIR"
 pseudos "PseudosTM_pwteter/14si.pspnc, PseudosTM_pwteter/6c.pspnc"

