# H compressed simple cubic, metallic.
# Frozen-phonon calculations
# GGA

 ndtset 3
 ixc 11

#Unperturbed geometry
    xred1 0.0   0.0  0.0
          0.25  0.0  0.0
          0.50  0.0  0.0
          0.75  0.0  0.0
  getwfk1  0

#Transverse frozen-phonon at q=0.5 0.0 0.0
    xred2 0.0   0.0  0.001
          0.25  0.0 -0.001
          0.50  0.0  0.001
          0.75  0.0 -0.001

#Transverse frozen-phonon at q=0.25 0.0 0.0
    xred3 0.0   0.0  0.002
          0.25  0.0  0.000
          0.50  0.0 -0.002
          0.75  0.0  0.000



#Common data
 acell  10.40 2*2.60
 chkprim 0

 ntypat 1
 znucl 1.0
 natom 4
 typat 4*1

 nstep 20
 tolvrs 5.0d-15

 ecut 20.0

 nband 12
 getwfk 1

 occopt 7
 tsmear 0.2

 kptopt 1
 ngkpt  1 4 4
 shiftk
   0.5 0.5 0.5


 pp_dirpath "$ABI_PSPDIR"
 pseudos "PseudosGTH_pwteter/01h.pspgth"

