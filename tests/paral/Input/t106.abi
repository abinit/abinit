# ---------------------------------------------------------------------------------------------------------
#
# NiO with 4 atoms in DMFT
# low cutoff, low number of k-points
# DMFT with TRIQS
#
# ---------------------------------------------------------------------------------------------------------
# -- Datasets and options
ndtset 2
jdtset 1 2
prtvol 4
pawprtvol -1
getwfk -1
paral_kgb 0 #This is enforced because of getwfk -1 to avoid strange behavior

# -- Convergence Parameters
nstep1 100
nstep 2
nline2 10
nnsclo2 5
ecut  4
# as this cutoff, test is not physical at all (filling of correlated orbitals are obviously wrong)

pawecutdg 8
tolvrs 1.0d-5
nband  34
occopt 3 tsmear 0.008275

##### PHYSICAL PARAMETERS
nsppol 1
nspden 1
natom 4 ntypat 2 typat 1 1 2 2
chkprim 0

znucl  28.0 8.0
rprim 0.0 1/2 1/2
      1/2 0.0 1/2
      1.0 1.0 0.0
xred 0 0 0
    0.0 0.0 0.5
    0.5 0.5 0.25
    0.5 0.5 0.75
acell   3*7.927

##### K-POINTS
chksymbreak 0
kptopt 1
ngkpt 2 2 3
istwfk *1

## == LDA+DMFT
usedmft1 0
usedmft 1
dmftbandi  9
dmftbandf 34
dmft_solv2 7
dmft_iter 1
dmft_nwli 500
dmftcheck 0
dmft_mxsf 0.3
dmft_dc 8

##### DFT+U
usepawu1    4
usepawu     14
dmatpuopt  1   # choose expression of the density matrix
lpawu   2 -1   # U on d-orbitals of Ni, no U on oxygen
upawu1  0.00  0.0   # values in Hartree
jpawu1  0.0000 0.0  # values in Hartree
upawu2  0.20  0.0   # values in Hartree
jpawu2  0.1000 0.0  # values in Hartree

dmftqmc_therm 50
dmftctqmc_basis 2
dmftctqmc_meas 10
dmft_triqs_off_diag 1
dmftqmc_l 500
dmftqmc_n 5.d2
dmft_triqs_move_double 0
dmft_yukawa_param 3
dmft_triqs_leg_measure 1
dmft_triqs_nleg 10

 pp_dirpath "$ABI_PSPDIR"
 pseudos "28ni.paw, 8o.2.paw"

