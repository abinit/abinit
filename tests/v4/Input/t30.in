#Simple cubic lattice of Mg atoms : prepare the density
#for Bader analysis

  prtden  1
    nkpt  1
  tolvrs  4.0d-10
 acell   3*7.4
 ecut     60
  kptopt 0
 natom    1
 nband    1
 nstep   40
 ntypat    1
 occopt   1
 typat     1
  xred    3*0.0d0
 znucl   12

 pp_dirpath "$ABI_PSPDIR"
 pseudos "12mg.pspnc"

