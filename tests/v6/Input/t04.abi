#  H2

getwfk    -1          # Use GS wave functions from dataset1


#Size-dependent parameters
 acell 15 2*10

 natom  2
 typat  1 1

 xcart   -7.3817368392E-01  0.0 0.0    # Equilibrium position
          7.3817368392E-01  0.0 0.0

 nband 2

# Miscellaneous
 nkpt 1
 ngkpt 1 1 1
 shiftk 0.0 0.0 0.0
 ntypat  1
 znucl 1
 diemac 2.0d0
 ecut 20.00
 enunit 2
 nstep 30
 nsym 1
 tolwfr 1.0d-18
 prtvha 1
 prtvhxc 1
 prtpot 1
 prtden 1
 prtvpsp 1
 prtvclmb 1

#occopt 2
#occ  2.00  0.00


 pp_dirpath "$ABI_PSPDIR"
 pseudos "PseudosHGH_pwteter/1h.1.hgh"

