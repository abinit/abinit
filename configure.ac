  else
    AC_MSG_NOTICE([debugging profile overriden by user-defined CFLAGS])
  fi
  if test "${CXXFLAGS}" = ""; then
    ABI_CXX_DBGFLAGS
  else
    AC_MSG_NOTICE([debugging profile overriden by user-defined CXXFLAGS])
