  abi_fc_probe=`echo "${FC}" | sed -e 's/ .*//'`
  if test ! -x "${abi_fc_probe}"; then
    AC_PATH_PROG([abi_fc_path],[${abi_fc_probe}])
    if test "${abi_fc_path}" = ""; then
      AC_MSG_ERROR([could not run Fortran compiler "${FC}"])
    fi
  fi
