  ! local vars
  integer, pointer :: xval(:,:) => null()

  ! convert the c pointer into a fortran array
  call c_f_pointer(xval_ptr, xval, xval_size)

  call xmpi_sum_int2d(xval, comm, ier)

end subroutine xmpi_sum_int2d_c

