!!****f* ABINIT/xmpi_send_char
!! NAME
!!  xmpi_send_char
!!
!! FUNCTION
!!  Sends data from one proc to another.
!!  Target: character.
!!
!! INPUTS
!!  dest :: rank of destination process
!!  tag :: integer message tag
!!  comm :: MPI communicator
!!
!! OUTPUT
!!  ier= exit status, a non-zero value meaning there is an error
!!
!! SIDE EFFECTS
!!  xval= buffer array
!!
!! SOURCE

subroutine xmpi_send_char(xval,dest,tag,comm,ier)

!Arguments-------------------------
 character(len=*),intent(inout) :: xval  
 integer ,intent(in) :: dest,tag,comm
 integer ,intent(out) :: ier

!Local variables-------------------
#if defined HAVE_MPI
 integer :: my_tag
#endif

! *************************************************************************

 ier=0
#if defined HAVE_MPI
 if (comm /= MPI_COMM_SELF .and. comm /= MPI_COMM_NULL) then
   my_tag = MOD(tag,xmpi_tag_ub)
   call MPI_SEND(xval,len(xval),MPI_CHARACTER,dest,my_tag,comm,ier)
 end if
#endif

end subroutine xmpi_send_char
